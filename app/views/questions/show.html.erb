<h1 class="title">
	<%= link_to @question.name, @question.url  %>
</h1>
<p>
	Published originally by <strong><%= @question.platform %></strong>
</p>

<div class="btn-group pull-right">
  <%= link_to like_question_path(@question), method: :put, class: "btn btn-success btn-sm" do %>
    <span class="glyphicon glyphicon-plus-sign"></span>
    Upvote
    <%= @question.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_question_path(@question), method: :put, class: "btn btn-warning btn-sm" do %>
    <span class="glyphicon glyphicon-minus-sign"></span>
    Downvote
    <%= @question.get_downvotes.size %>
  <% end %>
</div>

<h3 class="comments_title">
  <%= @question.comments.count %> Comments
</h3>

<div id="comments">
  <%= render :partial => @question.comments %>
</div>
<%= simple_form_for [@question, Comment.new]  do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Add Comment", class: "btn btn-success" %>
<% end %>